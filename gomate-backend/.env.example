# Backend Environment Variables (.env)
# Copy this to gomate-backend/.env and fill in your values

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/gomate

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# Cloudinary Configuration (Required for document uploads)
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# CORS Configuration (if needed)
# CORS_ORIGIN=http://localhost:3001,http://localhost:8081
